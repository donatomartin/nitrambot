{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es6", "dom"
        ],
        "moduleResolution": "node",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
